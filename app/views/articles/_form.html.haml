= form_with model: @article, :local => true do |form|
    - if @article.errors.any?
        %div{:id => "errors-explanation"}
            %h2
                = pluralize(@article.errors.count, 'errors')
            %ul
                - @article.errors.full_messages.each do |error|
                    %li= error       
    %div
        = form.label :title
        = form.text_field :title
    %div
        = form.label :text
        = form.text_area :text
    %div 
        = form.submit

    