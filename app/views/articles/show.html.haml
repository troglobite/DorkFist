%div.jumbotron
    %h1.display-4= @article.title
    %p.lead= @article.text
    %hr.my-4
    %div.container
        %div.col-sm
            %strong= "Posted by: "
            %strong= link_to @article.user.email, user_path(@article.user_id)
        - if current_user != @article.user_id
            %div.col-sm= link_to 'Like', user_article_likes_path(current_user.id, @article), method: :post

%div.container 
    %h4.alert.alert-primary= "Comments"
    %div= render @article.comments

%div.container
    %h2.alert.alert-primary= "Add a comment"
    = render 'comments/form'

%div
    - if current_user == @article.user_id
        = link_to 'Edit', edit_article_path(@article)
    = link_to 'Back', articles_path 
    = link_to 'Log Out', logout_path 