<h1>Sign Up</h1>
<p>Create a new account using the form below. All fields are required.</p>

<% if @user.errors.any? %>
    <div class='alert alert-danger'>
        <p>Please correct the following errors: </p>
        <ul>
            <% @user.errors.full_messages.each do |error_msg| %>
                <li><%= error_msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @user do |user_form| %>
    <div class='form-group'>
        <%= user_form.label :email %>
        <%= user_form.email_field :email, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= user_form.label :password %>
        <% user_form.password_field :password, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <% user_form.label :password_confirmation %>
        <% user_form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <% user_form.submit 'Register', class: 'btn btn-primary'%>
<% end %>

<p class='mt-2'>
    Already have an account? <%= link_to 'Click here to login', login_path %>
</p>